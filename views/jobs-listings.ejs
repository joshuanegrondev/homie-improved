<!-- BODY -->
<body id="top">
  <div id="over"></div>
  <div class="loader">
    <div class="spinner-border text-primary" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
  <div class="site-wrap">
    <div class="site-mobile-menu site-navbar-target">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div>
    <!-- .site-mobile-menu -->

    <!-- NAVBAR -->
    <header class="site-navbar mt-3">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="site-logo col-6"><a href="/about">HOMIE</a></div>
          <nav class="mx-auto site-navigation">
            <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">
              <li><a href="/profile" class="nav-link active">Home</a></li>
              <li class="has-children">
                <a href="/about" class="active">About Us</a>
                <ul class="dropdown">
                  <li><a href="/services">Services</a></li>
                  <!-- <li><a href="/testimonials">Testimonials</a></li> -->
                </ul>
              </li>
              <li class="has-children">
                <a href="/item-listings" class="active">View All Items</a>
                <ul class="dropdown">
                  <li><a href="/post-item" class="active">Post An Item</a></li>
                  <li><a href="/your-item" class="active">Track Your Items</a></li>
                </ul>
              </li>
              <li class="has-children">
                <a href="/jobs-listings" class="active">View All Jobs</a>
                <ul class="dropdown">
                  <li><a href="/post-job" class="active">Post A Job</a></li>
                </ul>
              </li>
              <li class="has-children">
                <a href="https://www.mhsa.net/about-us/programs" class="active">Government Help</a>
                <ul class="dropdown">
                  <li><a href="https://www.mass.gov/how-to/apply-for-snap-benefits-food-stamps" class="active">SNAP Application</a></li>
                  <li><a href="https://www.mass.gov/service-details/section-8-housing-choice-voucher-program-hcvp" class="active">Section 8</a></li>
                  <!-- goes to /post-item on routes.js -->
                </ul>
              </li>
              <li><a href="/contact" class="active">Contact</a></li>
            </ul>
          </nav>
          <div class="right-cta-menu text-right d-flex aligin-items-center col-6">
            <div class="ml-auto">
              <a href="/logout" class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-lock_outline"></span>Log Out</a>
            </div>
            <a href="#" class="site-menu-toggle js-menu-toggle d-inline-block d-xl-none mt-lg-2 ml-3"><span class="icon-menu h3 m-0 p-0 mt-2"></span></a>
          </div>
        </div>
      </div>
    </header>

    <!-- MAIN SEARCH -->
    <!-- <section class="home-section section-hero overlay bg-image" style="background-image: url('https://images.pexels.com/photos/325521/pexels-photo-325521.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=126');" id="home-section"> -->
    <section class="home-section section-hero overlay bg-image" style="background-color: black;" id="home-section">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="mb-5">
              <h1 class="text-white font-weight-bold" id="listingsH1"> Search For Jobs </h1>
            </div>
            <form method="post" action="/searchJobs" class="search-jobs-form">
              <div class="row mb-5">
                <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                  <input type="text" name="jobSearched" class="form-control form-control-lg" placeholder="Job Name" required>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                  <button class="btn btn-primary btn-lg btn-block text-white btn-search" id="searchButton"><span class="icon-search icon mr-2"></span>Search Jobs</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <a href="#next" class="scroll-button smoothscroll" id="listingsDownArrow">
        <span class=" icon-keyboard_arrow_down"></span>
      </a>
    </section>

    <!-- Job LISTINGS -->
    <section class="site-section" id="next">
      <div class="container">
        <div class="row mb-5 justify-content-center">
          <div class="col-md-7 text-center">
            <h2 class="section-title mb-2">Available Jobs</h2>
            <p>Click and contact the employer!</p>
          </div>
        </div>
        <ul class="job-listings mb-5">
          <% if(Jobs.length !== 0) {%>
            <% for(var i=0; i<Jobs.length; i++) {%>
              <li class="job-listing d-block d-sm-flex pb-3 pb-sm-0 align-items-center">
                <form class="" action="mailto:<%= Jobs[i].email %>" method="get">
                  <input type="submit" name="" value="Contact Employer">
                </form>
                <!-- <div class="job-listing-logo">
                <img src="<%=Jobs[i].image%>" alt="Free Website Template by Free-Template.co" class="img-fluid">
              </div> -->
              <div class="job-listing-about d-sm-flex custom-width w-100 justify-content-between mx-4">
                <div class="job-listing-position custom-width w-50 mb-3 mb-sm-0">
                  <h2> <%= Jobs[i].jobTitle %> </h2>
                  <p><%= Jobs[i].jobDescription %></p>
                  <strong><%= Jobs[i].itemlocation %> </strong> Posted On: <strong><%=Jobs[i].Date%></strong>
                </div>
              </div>
            </li>
            <% } %>
            <% } else  {%>
              <li class="job-listing d-block d-sm-flex pb-3 pb-sm-0 align-items-center">
                <div class="job-listing-about d-sm-flex custom-width w-100 justify-content-between mx-4">
                  <div class="job-listing-positison custom-width w-50 mb-3 mb-sm-0">
                    <h2> No available jobs for <%= yourJob %></h2>
                  </div>
                </div>
              </li>
              <% } %>
            </ul>
          </div>
        </section>

        <!-- FOOTER -->
        <footer class="site-footer">
          <a href="#top" class="smoothscroll scroll-top">
            <span class="icon-keyboard_arrow_up"></span>
          </a>
          <div class="container">
            <div class="row mb-5">
              <div class="col-6 col-md-3 mb-4 mb-md-0">
                <h3>Company</h3>
                <ul class="list-unstyled">
                  <li><a href="/about">About Us</a></li>
                </ul>
              </div>
              <div class="col-6 col-md-3 mb-4 mb-md-0">
                <h3>Support</h3>
                <ul class="list-unstyled">
                  <li><a href="/contact">Tech Support</a></li>
                </ul>
              </div>
              <div class="col-6 col-md-3 mb-4 mb-md-0">
                <h3>Contact Us</h3>
                <div class="footer-social">
                  <a href="https://twitter.com/jnegrondev"><span class="icon-twitter"></span></a>
                  <a href="https://www.linkedin.com/in/joshua-negron/"><span class="icon-linkedin"></span></a>
                </div>
              </div>
            </div>
            <div class="row text-center">
              <div class="col-12">
                <p class="copyright"><small>
                  Copyright &copy;<script>
                  document.write(new Date().getFullYear());
                  </script> All rights reserved | HOMIE is made with <i class="icon-heart text-danger" aria-hidden="true"></i> by Joshua Negron
                </small></p>
              </div>
            </div>
          </div>
        </footer>
      </div>

      <!-- SCRIPTS -->
      <script src="js/main.js"> </script>
      <script src="js/jquery.min.js"></script>
      <script src="js/bootstrap.bundle.min.js"></script>
      <script src="js/isotope.pkgd.min.js"></script>
      <script src="js/stickyfill.min.js"></script>
      <script src="js/jquery.fancybox.min.js"></script>
      <script src="js/jquery.easing.1.3.js"></script>
      <script src="js/jquery.waypoints.min.js"></script>
      <script src="js/jquery.animateNumber.min.js"></script>
      <script src="js/owl.carousel.min.js"></script>
      <script src="js/quill.min.js"></script>
      <script src="js/bootstrap-select.min.js"></script>
      <script src="js/custom.js"></script>
    </body>
    </html>
